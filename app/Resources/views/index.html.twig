{% extends "base.html.twig" %}

{% block body %}
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="{{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block content %}
        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        {% if content is defined %}
            {{ content }}
        {% endif %}
    {% endblock %}
{% endblock %}